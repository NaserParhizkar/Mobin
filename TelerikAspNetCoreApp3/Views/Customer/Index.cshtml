@using Northwind.WebUI.Controllers
@using Northwind.Repository.EntityModels

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-xs-18 col-md-12">
        @(Html.Kendo().Grid<Customer>().Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(p => p.CustomerId);
                    columns.Bound(p => p.CompanyName);
                    columns.Bound(p => p.Country);
                    columns.Bound(p => p.City);
                })
                .DataSource(dataSource =>
                {
                    dataSource
                        .AutoReadData()
                        .Ajax()
                        .PageSize(20)
                        .Read(read => read.Action<CustomerApiController>(t => t.Read(null)));

                })
                .Pageable()
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:550px;" })
        )
    </div>
</div>
