@using PDN.Repository;

@model PDNCustomer

<div class="form-horizontal form-widgets col-xs-11 col-sm-12 col-md-12">
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(t => t.NationalCode, new { @class = "control-label col-xs-11 col-sm-1 col-md-1" })
            <div class="col-xs-12 col-sm-8 col-md-8">
                @(Html.Kendo().TextBoxFor(t => t.NationalCode).Format("n0")
                    .HtmlAttributes(new { style = "direction:ltr" }))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.PDNFirstName, new { @class = "control-label col-xs-11 col-sm-1 col-md-1" })
            <div class="col-xs-12 col-sm-8 col-md-8">
                @Html.Kendo().TextBoxFor(t => t.PDNFirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.PDNLastName, new { @class = "control-label col-xs-11 col-sm-1 col-md-1" })
            <div class="col-xs-12 col-sm-8 col-md-8">
                @Html.Kendo().TextBoxFor(t => t.PDNLastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.PDNPostalCode, new { @class = "control-label col-xs-11 col-sm-1 col-md-1" })
            <div class="col-xs-12 col-sm-8 col-md-8">
                @Html.Kendo().TextBoxFor(t => t.PDNLastName).Format("n0").HtmlAttributes(new { style = "direction:ltr" }))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.Priority, new { @class = "control-label col-xs-11 col-sm-1 col-md-1" })
            <div class="col-xs-12 col-sm-8 col-md-8">
                @Html.Kendo().IntegerTextBoxFor(t => t.Priority).Culture("fa-IR").Format("n0").HtmlAttributes(new { style = "direction:ltr" })
            </div>
        </div>
    </div>
</div>




