@{
    ViewData["Title"] = "MySearchInputs";
    Layout = "~/Views/Shared/_Layout-old.cshtml";
}


<div class="demo-section k-content">
    <h4>Categories:</h4>
    @(Html.Kendo().DropDownList()
        .Name("categories")
        .OptionLabel("Select category...")
        .AutoFetchValueTextFields<Category>(fetchFlds => fetchFlds.DataValueField(x => x.CategoryId).DataTextField(x => x.CategoryName))
        .DataSource(source =>
        {
            source.Ajax().AutoMakeQueryExpression(true).Read(read =>
            {
                read.Type(HttpVerbs.Get).Action<Northwind.WebUI.Controllers.CategoryApiController>(y => y.Read(null));
            });
        }))

    <h4 style="margin-top: 2em;">Products:</h4>
    @(Html.Kendo().DropDownList()
                .Name("products")
                .OptionLabel("Select product...")
                .AutoFetchValueTextFields<Product>(fetchFlds => fetchFlds.DataValueField(x => x.ProductId).DataTextField(x => x.ProductName))
                .DataSource(source =>
                    {
                        source.Ajax().AutoMakeQueryExpression(true).Read(read =>
                        {
                            read.Type(HttpVerbs.Get).Action<Northwind.WebUI.Controllers.ProductApiController>(t => t.Read(null));
                        });
                    })
                .CascadeFrom("categories")
        )
</div>
