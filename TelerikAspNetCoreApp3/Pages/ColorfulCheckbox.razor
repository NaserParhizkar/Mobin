<label style="font-size:@(Size)px;color:@Color;direction:@Direction">
    <input @bind="Value"
           id="survey"
           name="blazor"
           type="checkbox" />
    Enjoying Blazor?
</label>

@code {
    [Parameter]
    public bool Value { get; set; }

    [Parameter]
    public int Size { get; set; } = 8;

    [Parameter]
    public string Color { get; set; }

    [Parameter]
    public string Direction { get; set; } = "rtl";

    protected override void OnInitialized()
    {
        Size += 10;
    }
}